{
  "name": "Chimera Development Environment",
  "image": "mcr.microsoft.com/devcontainers/go:1.21-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/google-cloud-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go",
        "hashicorp.terraform",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-python.python",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "eamodio.gitlens",
        "ms-vscode.makefile-tools",
        "formulahendry.code-runner"
      ],
      "settings": {
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go",
        "go.goroot": "/usr/local/go",
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.associations": {
          "*.tf": "terraform",
          "*.tfvars": "terraform",
          "Makefile": "makefile"
        }
      }
    }
  },

  "forwardPorts": [9193, 8080, 3000],
  "portsAttributes": {
    "9193": {
      "label": "Steampipe",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "Chimera API",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Development Server",
      "onAutoForward": "notify"
    }
  },

  "mounts": [
    "source=chimera-go-mod-cache,target=/go/pkg/mod,type=volume",
    "source=chimera-steampipe-cache,target=/home/vscode/.steampipe,type=volume"
  ],

  "remoteUser": "vscode",

  "onCreateCommand": "chmod +x scripts/*.sh",
  
  "postCreateCommand": ".devcontainer/setup.sh",

  "postStartCommand": "echo 'ðŸš€ Chimera Codespace is ready! Run: make setup to get started'",

  "containerEnv": {
    "STEAMPIPE_INSTALL_DIR": "/home/vscode/.steampipe",
    "STEAMPIPE_LOG_LEVEL": "info",
    "GO111MODULE": "on",
    "GOPROXY": "https://proxy.golang.org,direct",
    "GOSUMDB": "sum.golang.org"
  }
}
