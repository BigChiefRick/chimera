{
  "name": "Chimera Development Environment - Phase 3",
  "image": "mcr.microsoft.com/devcontainers/go:1.21-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {}
  },
  "remoteUser": "vscode",
  "containerEnv": {
    "GO111MODULE": "on",
    "GOPROXY": "https://proxy.golang.org,direct",
    "CHIMERA_ENV": "codespaces"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-vscode.makefile-tools",
        "hashicorp.terraform",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "go.useLanguageServer": true,
        "go.formatTool": "goimports",
        "go.lintTool": "golangci-lint",
        "terraform.experimentalFeatures.validateOnSave": true,
        "files.associations": {
          "*.tf": "terraform"
        }
      }
    }
  },
  "forwardPorts": [
    9193
  ],
  "portsAttributes": {
    "9193": {
      "label": "Steampipe",
      "onAutoForward": "silent"
    }
  },
  "postStartCommand": "echo 'ðŸš€ Chimera Phase 3 is ready! Go version:' && go version && echo 'Terraform version:' && terraform version",
  "postCreateCommand": "make setup-codespaces",
  "mounts": [
    "source=${localWorkspaceFolder}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.terraform.d,target=/home/vscode/.terraform.d,type=bind,consistency=cached"
  ]
}
