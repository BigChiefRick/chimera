{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Chimera: Build",
            "type": "shell",
            "command": "make",
            "args": ["build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Chimera: Test",
            "type": "shell",
            "command": "make",
            "args": ["test"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Chimera: Integration Test",
            "type": "shell",
            "command": "make",
            "args": ["integration-test"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Chimera: Format Code",
            "type": "shell",
            "command": "make",
            "args": ["fmt"],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Steampipe: Start Service",
            "type": "shell",
            "command": "steampipe",
            "args": ["service", "start"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Steampipe: Stop Service",
            "type": "shell",
            "command": "steampipe",
            "args": ["service", "stop"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Steampipe: Test Query",
            "type": "shell",
            "command": "steampipe",
            "args": ["query", "select 'Steampipe is working!' as message"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Chimera: Quick Demo",
            "type": "shell",
            "command": "./scripts/codespaces.sh",
            "args": ["demo"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Chimera: Full Setup",
            "type": "shell",
            "command": "make",
            "args": ["setup"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}
